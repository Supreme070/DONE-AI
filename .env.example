# =============================================================================
# OMNISECAI PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values for your environment

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=omnisecai_secure_2024
POSTGRES_DB=omnisecai_security
POSTGRES_USER=admin

MONGO_PASSWORD=omnisecai_mongo_2024
MONGO_DB=omnisecai_logs

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET=omnisecai_jwt_secret_change_in_production_with_256_bit_key
JWT_REFRESH_SECRET=omnisecai_refresh_secret_change_in_production_with_256_bit_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption key for sensitive data (must be 32 characters)
ENCRYPTION_KEY=your-super-secret-encryption-key-32

# Session configuration
SESSION_SECRET=omnisecai_session_secret_change_in_production
SESSION_TIMEOUT=3600

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_VERSION=v1
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@omnisecai.com
EMAIL_FROM_NAME=OmnisecAI Platform

# For production, use real SMTP settings:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# -----------------------------------------------------------------------------
# FILE UPLOAD & STORAGE
# -----------------------------------------------------------------------------
UPLOAD_MAX_SIZE=100mb
UPLOAD_ALLOWED_TYPES=.pkl,.joblib,.h5,.pb,.onnx,.pt,.pth,.bin,.safetensors
UPLOAD_STORAGE_TYPE=local
UPLOAD_STORAGE_PATH=./uploads

# For cloud storage (optional):
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=omnisecai-models

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Analytics and monitoring
ANALYTICS_ENABLED=true
MONITORING_INTERVAL=60

# -----------------------------------------------------------------------------
# REDIS/VALKEY CONFIGURATION
# -----------------------------------------------------------------------------
VALKEY_URL=valkey://valkey:6379
VALKEY_PASSWORD=
VALKEY_DB=0
VALKEY_TTL=3600

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900
PASSWORD_RESET_EXPIRES=3600

# MFA settings
MFA_ISSUER=OmnisecAI
MFA_WINDOW=1
MFA_BACKUP_CODES_COUNT=8

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME=OmnisecAI
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=true

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@omnisecai.com
PGADMIN_DEFAULT_PASSWORD=admin

# -----------------------------------------------------------------------------
# PRODUCTION OVERRIDES (uncomment for production)
# -----------------------------------------------------------------------------
# NODE_ENV=production
# LOG_LEVEL=warn
# ANALYTICS_ENABLED=true
# VITE_ENABLE_DEBUG_MODE=false

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/ssl/certs/omnisecai.crt
# SSL_KEY_PATH=/etc/ssl/private/omnisecai.key

# External services (for production)
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key